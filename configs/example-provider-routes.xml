<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:camel="http://camel.apache.org/schema/blueprint"
  xsi:schemaLocation="
 http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
 http://camel.apache.org/schema/blueprint http://camel.apache.org/schema/blueprint/camel-blueprint.xsd">

  <!-- Define TLS configuration for data provider -->
  <camel:sslContextParameters id="clientSslContext">
    <camel:keyManagers keyPassword="password">
      <camel:keyStore resource="etc/provider-keystore.p12" password="password"/>
    </camel:keyManagers>
    <camel:trustManagers>
      <camel:keyStore resource="etc/truststore.p12" password="password"/>
    </camel:trustManagers>
  </camel:sslContextParameters>

  <!-- Camel parsing configuration for json-->
  <camel:dataFormats>
    <camel:json id="jack" library="Jackson" prettyPrint="true"/>
  </camel:dataFormats>

  <!-- Routes -->
  <camelContext xmlns="http://camel.apache.org/schema/blueprint">
    <restConfiguration component="jetty" bindingMode="off" port="8989" enableCORS="true"/>
    <!-- Defines the alternative route on rest services using the context-path /postCsv -->
    <rest path="/postCsv">
      <description>CSV rest service</description>
      <post>
        <to uri="direct:update"/>
      </post>
    </rest>

    <!-- Define first route named sendData that retrieves AI Tech Data (reading the file mounted in the container - provider core) and 
         forwards it over secure IDS commonunication protocol -->
    <route id="sendData">
      <!-- <from uri="direct:update"/> -->
      <!-- Read the csv file -->
      <from uri="file://deploy/?fileName=ai_tech_data.csv&amp;charset=utf-8&amp;noop=true"/>
      <!-- Parses CSV -->
      <unmarshal>
        <csv delimiter="," useMaps="true"/>
      </unmarshal>
      <!-- Serializes and maps to JSON -->
      <marshal>
        <json/>
      </marshal>
      <!-- Forward to secure container "consumer core" through IDSCP2 (IDS communication protocol) -->
      <to uri="idscp2client://consumer-core:29292?awaitResponse=true&amp;sslContextParameters=#clientSslContext&amp;useIdsMessages=false"/>
      <!-- Sets the content type -->
      <setHeader name="Content-Type">
        <constant>text/plain</constant>
      </setHeader>
    </route>

    <!-- Define second route named sendData that retrieves AI Tech Data (reading the file mounted in the container - provider core) and 
         forwards it over secure IDS commonunication protocol -->
    
    <route id="sendData2">
      <!-- <from uri="direct:update"/> -->
      <from uri="file://deploy/?fileName=farmer_data.csv&amp;charset=utf-8&amp;noop=true"/>
      <!-- Parses CSV -->
      <unmarshal>
        <csv delimiter="," useMaps="true"/>
      </unmarshal>
      <!-- Serializes maps to JSON -->
      <marshal>
        <json/>
      </marshal>
      <to uri="idscp2client://consumer-core:29292?awaitResponse=true&amp;sslContextParameters=#clientSslContext&amp;useIdsMessages=false"/>
      <!-- Sets the correct header for the text answer "OK" -->
      <setHeader name="Content-Type">
        <constant>text/plain</constant>
      </setHeader>
    </route>

  </camelContext>
</blueprint>
